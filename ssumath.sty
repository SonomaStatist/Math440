%Generate the title page or title header (depends on if using doctype report or article, respectively)
\newcommand{\mktitle}[3]{
	\title{#1 \\ \vspace{7px} \large{#2}}
	\author{#3}
	\maketitle	
}

%Shorten mathbb for basic number sets
\newcommand{\bb}[1]{\mathbb{#1}}

%Add a subscript naught to the argument
\newcommand{\naught}[1]{{#1}_{\circ}}

%Shorthand for left and right angle brackets
\newcommand{\abrace}[1]{\left\langle #1 \right\rangle}

%Absolute value symbol
\newcommand{\abs}[1]{\left| #1 \right|}

%Shorthand for the norm function, ie: ||x||
\newcommand{\norm}[1]{\left|\left| #1 \right|\right|}

%Shorthand for defining problem{#}{hypothesis}proof:{text}blacksquare
\newcommand{\proof}[3]{
	\begin{enumerate}
		\item[\bf{Problem #1}] #2
		\item[\textbf{Proof:}]
		#3
		\begin{flushright}
			$\blacksquare$
		\end{flushright}
	\end{enumerate}
}

%Shorthand for defining Theorem{#}{hypothesis}proof:{text}blacksquare
\newcommand{\theorem}[3]{
	\begin{enumerate}
		\item[\bf{Theorem #1}] #2
		\item[\textbf{Proof:}]
		#3
		\begin{flushright}
			$\blacksquare$
		\end{flushright}
	\end{enumerate}
}

%Shorthand for defining problem{#}{descrition}{solution}
\newcommand{\problem}[3]{
	\begin{enumerate}
		\item[\bf{Problem #1}] #2 
		#3
	\end{enumerate}
}

%Shorthand for defining {item#}{sub-hypothesis}proof:{text}blacksquare
%does require \b{enum} ... \e{enum} or \problem
\newcommand{\subproof}[3]{
	\item[\bf{#1}] #2
	\item[\bf{Proof:}] 
	#3 
	\begin{flushright}
		$\blacksquare$
	\end{flushright}
}

\newcommand{\subsoln}[3]{
	\item[\bf{#1}] #2
	\item[\bf{Solution:}] 
	#3 
	\begin{flushright}
		$\blacksquare$
	\end{flushright}
}


%Macro for writing piecewise functions, provides '#1 = {#2'
\newcommand{\piecewise}[2]{
	\begin{displaymath}
	#1 = \left\{
	\begin{array}{lcl}
	#2
	\end{array}\right.
	\end{displaymath}
}

%Condition within a piecewise function, looks like '#1 if #2'
%only for use within the second argument of \piecewise
\newcommand{\pwcond}[2]{
	#1 & \text{if} & #2 \\
}

%Macro for writing long, multistep equation transformations 
%eg: x = y, x = yz + w, x = ...
\newcommand{\longeq}[1]{
	\begin{displaymath}
	\begin{array}{rl}
	#1
	\end{array}
	\end{displaymath}
}

%single line for each equation step, of the form 'x = y' or '  = y'
\newcommand{\eqstep}[2]{
	#1 = & #2 \\
}

%single line for each equation step, of the form 'x ~ y' or '  ~ y'
\newcommand{\seqstep}[2]{
	#1 \sim & #2 \\
}

%single line for each equation step, of the form 'x > y' or '  > y'
\newcommand{\gtstep}[2]{
	#1 > & #2 \\
}

%single line for each equation step, of the form 'x >= y' or '  >= y'
\newcommand{\geqstep}[2]{
	#1 \geqslant & #2 \\
}

%single line for each equation step, of the form 'x < y' or '  < y'
\newcommand{\ltstep}[2]{
	#1 < & #2 \\
}

%single line for each equation step, of the form 'x <= y' or '  <= y'
\newcommand{\leqstep}[2]{
	#1 \leqslant & #2 \\
}